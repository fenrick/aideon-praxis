{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/AideonDesktop/src/*"],
      "canvas/*": ["app/AideonDesktop/src/canvas/*"],
      "design-system/*": ["app/AideonDesktop/src/design-system/*"],
      "adapters/*": ["app/AideonDesktop/src/adapters/*"],
      "dtos/*": ["app/AideonDesktop/src/dtos/*"]
    }
  },
  "include": ["app/**/*.ts", "app/**/*.tsx"],
  "exclude": [
    "**/dist/**",
    "**/build/**",
    "**/out/**",
    "**/.pnpm/**",
    "**/node_modules/**",
    "app/AideonDesktop/legacy/**",
    "app/AideonDesktop/src/design-system/components/**/*",
    "app/**/tsconfig.tsbuildinfo"
  ]
}
