{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v2/schema.json",
  "productName": "Aideon Praxis",
  "version": "0.1.0",
  "identifier": "com.aideon.praxis",
  "build": {
    "beforeDevCommand": "yarn workspace @aideon/app dev",
    "beforeBuildCommand": "yarn workspace @aideon/app build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "packages/app/dist/renderer"
  },
  "app": {
    "windows": [
      {
        "title": "Aideon Praxis",
        "width": 800,
        "height": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
