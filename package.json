{
  "name": "aideon-praxis",
  "private": true,
  "version": "0.1.0",
  "packageManager": "yarn@4.10.3",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "preflight": "node tools/preflight.mjs",
    "rust:fmt": "cargo fmt --all --check",
    "rust:lint": "cargo clippy --manifest-path packages/host/Cargo.toml --all-targets -- -D warnings",
    "build": "tsc -b --pretty false || true && yarn workspace @aideon/app build",
    "worker:bundle": "node scripts/build-worker-binary.mjs",
    "package": "yarn worker:bundle && yarn workspace @aideon/app dist",
    "dev": "yarn workspace @aideon/app dev",
    "dev:tauri": "concurrently -k \"yarn workspace @aideon/app dev:vite\" \"bash scripts/dev-tauri.sh\"",
    "lint": "node node_modules/eslint/bin/eslint.js --max-warnings=10 \"packages/**/{src,tests}/**/*.{ts,tsx,js}\"",
    "lint:fix": "node node_modules/eslint/bin/eslint.js --max-warnings=10 \"packages/**/{src,tests}/**/*.{ts,tsx,js}\" --fix",
    "format": "prettier -w . && yarn py:format",
    "typecheck": "tsc -b --pretty",
    "test": "vitest run --reporter=default",
    "test:coverage": "vitest run --coverage.enabled=true --coverage.provider=istanbul --coverage.reporter=lcov --coverage.reporter=html --coverage.reporter=text",
    "release": "semantic-release",
    "commitlint": "commitlint --from=origin/main --to=HEAD",
    "prepare": "husky install",
    "format:check": "prettier -c . && yarn py:lint",
    "py:lint": "scripts/uvpy ruff check . && scripts/uvpy black --check .",
    "py:format": "scripts/uvpy ruff check --fix . && scripts/uvpy black .",
    "py:typecheck": "scripts/uvpy mypy --config-file packages/worker/pyproject.toml packages/worker/src",
    "py:sec": "scripts/uvpy bandit -r packages/worker/src -x packages/worker/tests",
    "py:pyright": "pyright -p packages/worker/pyrightconfig.json",
    "py:deadcode": "scripts/uvpy vulture packages/worker/src --min-confidence 80",
    "py:test": "scripts/uvpy pytest -q packages/worker",
    "py:test:cov": "scripts/uvpy pytest -q packages/worker --cov-branch --cov=packages/worker/src --cov-report=xml:packages/worker/coverage.xml --cov-report=term",
    "py:sync": "bash -lc 'cd packages/worker && uv sync --python 3.13 --extra dev'",
    "py:lock": "uv lock --group dev",
    "ci": "yarn lint && yarn typecheck && yarn test:coverage && yarn py:lint && yarn py:typecheck && yarn py:pyright && yarn py:sec && yarn py:test:cov",
    "issues:sync": "node scripts/issues-sync.mjs",
    "issues:sync:check": "node scripts/issues-sync.mjs --check",
    "issues:sync:github": "node scripts/issues-sync.mjs --to-github --repo fenrick/aideon-praxis",
    "issues:mirror": "node scripts/issues-gh-mirror.mjs",
    "issues:mirror:check": "node scripts/issues-gh-mirror.mjs --check",
    "issues:start": "node scripts/issues-start.mjs",
    "issues:cleanup": "node scripts/issues-cleanup.mjs",
    "issues:project": "node scripts/issues-project-sync.mjs",
    "issues:project:dry": "node scripts/issues-project-sync.mjs --dry-run",
    "issues:dod": "node scripts/issues-dod.mjs",
    "issues:linkify": "node scripts/issues-linkify.mjs",
    "issues:split": "node scripts/issues-split.mjs",
    "issues:backfill": "node scripts/issues-commits-backfill.mjs",
    "issues:close-done": "node scripts/issues-close-done.mjs",
    "issues:heuristic": "node scripts/issues-heuristic-backfill.mjs",
    "build:tauri": "yarn workspace @aideon/app build && yarn dlx @tauri-apps/cli@latest build -C packages/host",
    "milestones:dates": "node scripts/milestones-set-dates.mjs",
    "project:dates": "node scripts/project-dates-apply.mjs",
    "labels:bootstrap": "node scripts/labels-bootstrap.mjs"
  },
  "vitest": {
    "environment": "jsdom",
    "setupFiles": [
      "packages/app/tests/setup.ts"
    ],
    "coverage": {
      "provider": "istanbul",
      "reporter": [
        "text",
        "lcov",
        "html"
      ],
      "reportOnFailure": true,
      "include": [
        "packages/app/src/**/*.{ts,tsx}"
      ],
      "exclude": [
        "**/*.d.ts",
        "**/*.test.*",
        "packages/**/dist/**",
        "scripts/**",
        "packages/app/src/version.ts",
        "packages/adapters/**"
      ]
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.1.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^12.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.8.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.0.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-promise": "^7.0.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-regexp": "^2.6.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-security-node": "^1.1.0",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unicorn": "^61.0.2",
    "husky": "^9.1.6",
    "jsdom": "^27.0.0",
    "prettier": "^3.2.0",
    "pyright": "^1.1.406",
    "semantic-release": "^25.0.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.5.0",
    "vitest": "^3.2.4"
  }
}
