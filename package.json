{
  "name": "aideon-praxis",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.19.0",
  "license": "MIT",
  "workspaces": [
    "app/AideonDesignSystem",
    "app/PraxisCanvas",
    "app/PraxisAdapters",
    "app/PraxisDtos"
  ],
  "pnpm": {
    "overrides": {
      "csstype": "3.2.1"
    }
  },
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "preflight": "node tools/preflight.mjs",
    "postinstall": "pnpm --filter @aideon/PraxisDtos run build",
    "node:dev": "pnpm --filter @aideon/PraxisCanvas dev",
    "node:build": "pnpm --filter @aideon/PraxisCanvas run build",
    "node:test": "vitest run --reporter=default",
    "node:test:coverage": "vitest run --coverage.enabled=true --coverage.provider=istanbul --coverage.reporter=lcov --coverage.reporter=html --coverage.reporter=text",
    "node:lint": "eslint --max-warnings=10 --ignore-pattern \"app/AideonDesignSystem/**\" \"app/**/src/**/*.{ts,tsx,js}\"",
    "node:lint:fix": "eslint --max-warnings=10 --ignore-pattern \"app/AideonDesignSystem/**\" \"app/**/src/**/*.{ts,tsx,js}\" --fix",
    "node:format": "prettier -w .",
    "node:format:check": "prettier -c .",
    "node:typecheck": "pnpm --filter @aideon/PraxisCanvas run typecheck && pnpm --filter @aideon/PraxisAdapters run typecheck && pnpm --filter @aideon/PraxisDtos run typecheck",
    "design:guard": "node tools/design-system-guard.mjs",
    "node:ci": "pnpm run design:guard && pnpm run node:lint:fix && pnpm run node:typecheck && pnpm run node:test:coverage && pnpm run node:format",
    "tauri": "tauri",
    "issues": "python3 scripts/issues.py",
    "issues:mirror:check": "python3 scripts/issues.py mirror --check",
    "issues:start": "python3 scripts/issues.py start",
    "issues:split": "python3 scripts/issues.py split",
    "issues:dod": "python3 scripts/issues.py dod",
    "issues:linkify": "python3 scripts/issues.py linkify",
    "issues:backfill": "python3 scripts/issues.py backfill",
    "issues:project": "python3 scripts/issues.py project",
    "host:clean": "cargo clean",
    "host:format": "cargo fmt --all",
    "host:format:check": "cargo fmt --all -- --check",
    "host:lint": "cargo clippy --all-targets -- -D warnings",
    "host:check": "pnpm run host:lint",
    "host:fix": "cargo fix --allow-dirty",
    "host:ci": "pnpm run host:clean && pnpm run host:fix && pnpm run host:lint && pnpm run host:format",
    "ci": "pnpm run node:ci && pnpm run host:ci",
    "release": "semantic-release",
    "commitlint": "commitlint --from=origin/main --to=HEAD"
  },
  "vitest": {
    "environment": "jsdom",
    "setupFiles": [],
    "coverage": {
      "provider": "istanbul",
      "reporter": [
        "text",
        "lcov",
        "html"
      ],
      "reportOnFailure": true,
      "include": [
        "app/PraxisCanvas/src/**/*.{ts,tsx}",
        "app/PraxisAdapters/src/**/*.{ts,tsx}",
        "app/PraxisDtos/src/**/*.{ts,tsx}"
      ],
      "exclude": [
        "**/*.d.ts",
        "**/*.test.*",
        "app/**/dist/**",
        "scripts/**"
      ]
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@opentelemetry/api": "^1.9.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@tauri-apps/cli": "^2.9.4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-istanbul": "^4.0.14",
    "@vitest/coverage-v8": "^4.0.14",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-security-node": "^1.1.4",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "semantic-release": "^25.0.2",
    "shadcn": "^3.5.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  }
}
