{
  "name": "aideon-praxis",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -b --pretty false || true && yarn workspace @aideon/app build",
    "worker:bundle": "node scripts/build-worker-binary.mjs",
    "package": "yarn worker:bundle && yarn workspace @aideon/app dist",
    "dev": "yarn workspace @aideon/app dev",
    "lint": "node node_modules/eslint/bin/eslint.js --max-warnings=10 \"packages/**/{src,tests}/**/*.{ts,tsx,js}\"",
    "format": "prettier -w .",
    "typecheck": "tsc -b --pretty",
    "test": "vitest run --reporter=default",
    "release": "semantic-release",
    "commitlint": "commitlint --from=origin/main --to=HEAD",
    "prepare": "husky install",
    "format:check": "prettier -c .",
    "format:py": "python3 -m black packages/worker",
    "format:py:check": "python3 -m black --check packages/worker",
    "py:lint": "python3 -m ruff check -q --config packages/worker/pyproject.toml packages/worker",
    "py:typecheck": "python3 -m mypy --config-file packages/worker/pyproject.toml packages/worker/src",
    "py:security": "python3 -m bandit -q -r packages/worker/src -x packages/worker/tests",
    "py:pyright": "pyright -p packages/worker/pyrightconfig.json",
    "py:deadcode": "python3 -m vulture packages/worker/src --min-confidence 80",
    "py:test": "python3 -m pytest -q packages/worker",
    "ci": "yarn lint && yarn typecheck && yarn test && yarn py:lint && yarn py:typecheck && yarn py:pyright && yarn py:security && yarn py:deadcode && yarn py:test"
  },
  "vitest": {
    "environment": "jsdom"
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.1.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^11.0.6",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-promise": "^7.0.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-regexp": "^2.6.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-security-node": "^1.1.0",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unicorn": "^61.0.2",
    "jsdom": "^27.0.0",
    "prettier": "^3.2.0",
    "pyright": "^1.1.406",
    "semantic-release": "^24.0.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.5.0",
    "vitest": "^3.2.4"
  }
}
