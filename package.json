{
  "name": "aideon-praxis",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -b --pretty false || true && yarn workspace @aideon/app build",
    "worker:bundle": "node scripts/build-worker-binary.mjs",
    "package": "yarn worker:bundle && yarn workspace @aideon/app dist",
    "dev": "yarn workspace @aideon/app dev",
    "lint": "eslint --max-warnings=10 \"packages/**/{src,tests}/**/*.{ts,tsx,js}\" scripts/**/*.mjs",
    "format": "prettier -w .",
    "typecheck": "tsc -b --pretty",
    "test": "vitest run --reporter=default",
    "release": "semantic-release",
    "commitlint": "commitlint --from=origin/main --to=HEAD",
    "format:check": "prettier -c .",
    "format:py": "python3 -m black packages/worker",
    "format:py:check": "python3 -m black --check packages/worker",
    "py:lint": "python3 -m ruff check packages/worker",
    "py:test": "python3 -m pytest -q packages/worker",
    "ci": "yarn lint && yarn typecheck && yarn test && yarn py:lint && yarn py:test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@types/node": "^22.0.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.0.0",
    "@eslint/eslintrc": "^3.1.0",
    "eslint-plugin-sonarjs": "^0.25.0",
    "eslint-plugin-promise": "^7.0.0",
    "eslint-plugin-regexp": "^2.6.0",
    "eslint-plugin-unicorn": "^55.0.0",
    "eslint-plugin-security-node": "^1.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.34.0",
    "semantic-release": "^24.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^10.0.0",
    "prettier": "^3.2.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0",
    "typescript-eslint": "^8.5.0"
  }
}
