{
  "name": "aideon-praxis",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm",
  "license": "MIT",
  "workspaces": [
    "app/*"
  ],
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "preflight": "node tools/preflight.mjs",
    "node:dev": "pnpm --filter @aideon/app dev",
    "node:build": "vite build",
    "node:test": "vitest run --reporter=default",
    "node:test:coverage": "vitest run --coverage.enabled=true --coverage.provider=istanbul --coverage.reporter=lcov --coverage.reporter=html --coverage.reporter=text",
    "node:lint": "eslint --max-warnings=10 \"app/**/src/**/*.{ts,tsx,js,svelte}\"",
    "node:lint:fix": "eslint --max-warnings=10 \"app/**/src/**/*.{ts,tsx,js,svelte}\" --fix",
    "node:format": "prettier -w .",
    "node:format:check": "prettier -c .",
    "node:typecheck": "tsc -b --pretty",
    "node:ci": "pnpm run node:lint:fix && pnpm run node:typecheck && pnpm run node:test && pnpm run node:format",
    "tauri": "tauri",
    "issues": "python3 scripts/issues.py",
    "issues:mirror:check": "python3 scripts/issues.py mirror --check",
    "issues:start": "python3 scripts/issues.py start",
    "issues:split": "python3 scripts/issues.py split",
    "issues:dod": "python3 scripts/issues.py dod",
    "issues:linkify": "python3 scripts/issues.py linkify",
    "issues:backfill": "python3 scripts/issues.py backfill",
    "host:clean": "cargo clean --manifest-path crates/tauri/Cargo.toml",
    "host:format": "cargo fmt --manifest-path crates/tauri/Cargo.toml --all",
    "host:format:check": "cargo fmt --manifest-path crates/tauri/Cargo.toml --all -- --check",
    "host:lint": "cargo clippy --manifest-path crates/tauri/Cargo.toml --all-targets -- -D warnings",
    "host:check": "cargo check --manifest-path crates/tauri/Cargo.toml",
    "host:fix": "cargo fix --allow-dirty --manifest-path crates/tauri/Cargo.toml",
    "host:ci": "pnpm run host:clean && pnpm run host:fix && pnpm run host:lint && pnpm run host:check && pnpm run host:format",
    "ci": "pnpm run node:ci && pnpm run host:ci",
    "release": "semantic-release",
    "commitlint": "commitlint --from=origin/main --to=HEAD",
    "prepare": "husky install"
  },
  "vitest": {
    "environment": "jsdom",
    "setupFiles": [
      "app/desktop/tests/setup.ts"
    ],
    "coverage": {
      "provider": "istanbul",
      "reporter": [
        "text",
        "lcov",
        "html"
      ],
      "reportOnFailure": true,
      "include": [
        "app/desktop/src/lib/**/*.{ts,tsx}",
        "app/adapters/src/**/*.{ts,tsx}"
      ],
      "exclude": [
        "**/*.d.ts",
        "**/*.test.*",
        "app/**/dist/**",
        "scripts/**",
        "app/desktop/src/version.ts",
        "app/desktop/src/routes/**",
        "**/routes/+layout.ts"
      ]
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@opentelemetry/api": "^1.9.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tauri-apps/cli": "^2.9.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-istanbul": "^4.0.3",
    "@vitest/coverage-v8": "^4.0.3",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-security-node": "^1.1.4",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-svelte": "^3.12.5",
    "eslint-plugin-unicorn": "^61.0.2",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "semantic-release": "^25.0.1",
    "svelte": "^5.42.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.3"
  }
}
