{
  "name": "aideon-praxis",
  "private": true,
  "version": "0.1.0",
  "packageManager": "yarn@4.10.3",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "preflight": "node tools/preflight.mjs",
    "node:dev": "yarn workspace @aideon/app dev",
    "node:build": "yarn workspace @aideon/app build",
    "node:test": "vitest run --reporter=default",
    "node:test:coverage": "vitest run --coverage.enabled=true --coverage.provider=istanbul --coverage.reporter=lcov --coverage.reporter=html --coverage.reporter=text",
    "node:lint": "eslint --max-warnings=10 \"packages/**/{src,tests}/**/*.{ts,tsx,js}\"",
    "node:lint:fix": "eslint --max-warnings=10 \"packages/**/{src,tests}/**/*.{ts,tsx,js}\" --fix",
    "node:format": "prettier -w .",
    "node:format:check": "prettier -c .",
    "node:typecheck": "tsc -b --pretty",
    "tauri:dev": "yarn --cwd packages/host tauri dev",
    "tauri:build": "yarn --cwd packages/host tauri build",
    "worker:lint": "scripts/uvpy ruff check . && scripts/uvpy black --check .",
    "worker:format": "scripts/uvpy ruff check --fix . && scripts/uvpy black .",
    "worker:typecheck": "scripts/uvpy mypy --config-file packages/worker/pyproject.toml packages/worker/src",
    "worker:sec": "scripts/uvpy bandit -r packages/worker/src -x packages/worker/tests",
    "worker:pyright": "pyright -p packages/worker/pyrightconfig.json",
    "worker:deadcode": "scripts/uvpy vulture packages/worker/src --min-confidence 80",
    "worker:test": "scripts/uvpy pytest -q packages/worker",
    "worker:test:cov": "scripts/uvpy pytest -q packages/worker --cov-branch --cov=packages/worker/src --cov-report=xml:packages/worker/coverage.xml --cov-report=term",
    "worker:sync": "bash -lc 'cd packages/worker && uv sync --python 3.13 --extra dev'",
    "worker:lock": "uv lock --group dev",
    "worker:bundle": "node scripts/build-worker-binary.mjs",
    "worker:serve": "scripts/uvpy python -m aideon_worker.server",
    "issues": "python3 scripts/issues.py",
    "issues:mirror:check": "python3 scripts/issues.py mirror --check",
    "issues:start": "python3 scripts/issues.py start",
    "issues:split": "python3 scripts/issues.py split",
    "issues:dod": "python3 scripts/issues.py dod",
    "issues:linkify": "python3 scripts/issues.py linkify",
    "issues:backfill": "python3 scripts/issues.py backfill",
    "host:fmt": "cargo fmt --manifest-path packages/host/Cargo.toml --all -- --check",
    "host:lint": "cargo clippy --manifest-path packages/host/Cargo.toml --all-targets -- -D warnings",
    "host:check": "cargo check --manifest-path packages/host/Cargo.toml",
    "ci": "yarn node:lint && yarn node:typecheck && yarn node:test && yarn host:fmt && yarn host:lint && yarn host:check && yarn worker:lint && yarn worker:typecheck && yarn worker:pyright && yarn worker:sec && yarn worker:test:cov",
    "release": "semantic-release",
    "commitlint": "commitlint --from=origin/main --to=HEAD",
    "prepare": "husky install"
  },
  "vitest": {
    "environment": "jsdom",
    "setupFiles": [
      "packages/app/tests/setup.ts"
    ],
    "coverage": {
      "provider": "istanbul",
      "reporter": [
        "text",
        "lcov",
        "html"
      ],
      "reportOnFailure": true,
      "include": [
        "packages/app/src/**/*.{ts,tsx}"
      ],
      "exclude": [
        "**/*.d.ts",
        "**/*.test.*",
        "packages/**/dist/**",
        "scripts/**",
        "packages/app/src/version.ts",
        "packages/adapters/**"
      ]
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.1.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^12.0.0",
    "@tauri-apps/cli": "^2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.8.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.0.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-promise": "^7.0.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-regexp": "^2.6.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-security-node": "^1.1.0",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unicorn": "^61.0.2",
    "husky": "^9.1.6",
    "jsdom": "^27.0.0",
    "prettier": "^3.2.0",
    "pyright": "^1.1.406",
    "semantic-release": "^25.0.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.5.0",
    "vitest": "^3.2.4"
  }
}
