{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "strict": true,
    "jsx": "react-jsx",
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "vite/client"],
    "paths": {
      "@aideon/PraxisAdapters": ["app/praxis-adapters/src"],
      "@aideon/PraxisAdapters/*": ["app/praxis-adapters/src/*"],
      "@aideon/PraxisDtos": ["app/praxis-dtos/src"],
      "@aideon/PraxisDtos/*": ["app/praxis-dtos/src/*"],
      "@aideon/PraxisDesignSystem": ["app/praxis-design-system/src"],
      "@aideon/PraxisDesignSystem/*": ["app/praxis-design-system/src/*"]
    }
  }
}
