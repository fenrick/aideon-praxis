{
  "openrpc": "1.2.6",
  "info": {
    "title": "Aideon Worker RPC",
    "version": "0.1.0",
    "description": "Versioned JSON-RPC methods over pipes/UDS in desktop mode"
  },
  "methods": [
    {
      "name": "ping.v1",
      "params": [],
      "result": {
        "name": "result",
        "schema": { "type": "string", "enum": ["pong"] }
      },
      "summary": "Health check"
    },
    {
      "name": "temporal.state_at.v1",
      "params": [
        {
          "name": "params",
          "schema": {
            "type": "object",
            "required": ["asOf"],
            "properties": {
              "asOf": { "type": "string", "description": "ISO date" },
              "scenario": { "type": ["string", "null"] },
              "confidence": { "type": ["number", "null"] }
            }
          }
        }
      ],
      "result": {
        "name": "result",
        "schema": {
          "type": "object",
          "required": ["asOf", "nodes", "edges"],
          "properties": {
            "asOf": { "type": "string" },
            "scenario": { "type": ["string", "null"] },
            "confidence": { "type": ["number", "null"] },
            "nodes": { "type": "integer" },
            "edges": { "type": "integer" }
          }
        }
      },
      "summary": "Temporal.StateAt query"
    }
  ]
}
