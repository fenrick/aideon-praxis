{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "types": ["node"],
    "paths": {
      "@aideon/design-system": ["./src"],
      "@aideon/design-system/*": ["./src/*"],
      "@/components": ["./components"],
      "@/components/*": ["./components/*"],
      "@/hooks": ["./hooks"],
      "@/hooks/*": ["./hooks/*"],
      "@/lib": ["./lib"],
      "@/lib/*": ["./lib/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
