{
  "name": "@aideon/design-system",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Shared Aideon design system (shadcn + React Flow proxies)",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./ui/*": "./src/ui/*",
    "./reactflow/*": "./src/reactflow/*",
    "./blocks/*": "./src/blocks/*",
    "./lib/*": "./src/lib/*",
    "./styles.css": "./src/styles.css"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "components:refresh": "pnpm dlx shadcn@latest add button card input select table dialog command slider --overwrite --yes && pnpm dlx shadcn@latest add @reactflow/node-search @reactflow/base-node @reactflow/node-tooltip @reactflow/animated-svg-edge --overwrite --yes"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@xyflow/react": "^12.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "lucide-react": "^0.553.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "shadcn": "^3.5.0",
    "tailwindcss": "^4.1.16",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3"
  }
}
